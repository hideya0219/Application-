<div class="edit">
  <h1>Editing Book</h1>
  <div class="error-message-wrapper">
    <% if @book.errors.any? %>
      <div class="error-count-wrapper">
        <div class="error-count">
          <%= @book.errors.count %> errors prohibited this book from being saved:
        </div>
      </div>
      <div class="error-list">
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
    <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <div class="item item1">
      <p>Title</p>
      <div>
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="item item2">
      <p>Body</p>
      <div>
        <%= f.text_area :body %>
      </div>
    </div>

    <%= f.submit 'Update Book' %>
  <% end %>

    <div id="link">
      <div class="link1">
        <%= link_to "Show", book_path(@book), class: "link" %>
      </div>
      <div class="link2">
        <%= link_to "Back", books_path(@book), class: "link" %>
      </div>
    </div>

</div>

