<div class="show">
  <h2>Books</h2>

  <p>Title</p>
  <% @books.each do |book| %>
    <span><%= book.title %></span>
  <% end %>

  <p>Body</p>
  <% @books.each do |book| %>
    <span><%= book.body %></span>
  <% end %>
</div>

<div class="new">
  <h2>New book</h2>

  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>
