<div class="index">
  <h2>Books</h2>
  <ul>
    <li>Title</li>
    <li>Body</li>
  </ul>
  <div class="index-wrapper">
    <div class="index-box">
      <% @books.each do |book| %>
        <div class="title">
          <span><%= book.title %></span>
        </div>
        <div class="body">
          <span><%= book.body %></span>
        </div>
        <div class="link">
          <%= link_to "Show", book_path(book) %>
        </div>
        <div class="link">
           <%= link_to "Edit", edit_book_path(book) %>
        </div>
        <div class="link">
          <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="new">
  <h2>New book</h2>
  <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <div class="box-wrapper">
    <%= form_with model: @book do |f| %>
      <div class="box">
        <p>Title</p>
        <%= f.text_field :title %>
      </div>
      <div class="box">
        <hp>Body</p>
        <%= f.text_area :body %>
      </div>
      <%= f.submit 'Create Book' %>
    <% end %>
  </div>
</div>
