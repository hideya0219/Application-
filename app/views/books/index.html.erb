<div class="index">
  <h2>Books</h2>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td>
          <sapn><%= book.title %></sapn>
        </td>
        <td>
          <sapn><%= book.body %></sapn>
        </td>
        <td>
          <%= link_to "Show", book_path(book), class: "link" %>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(book), class: "link" %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ", class: "link" %>
        </td>
      </tr>
    <% end %>
  </table>

</div>

<div class="new">
  <h2>New book</h2>
  <div class="error-message-wrapper">
    <% if @book.errors.any? %>
      <div class="error-count-wrapper">
        <div class="error-count">
          <%= @book.errors.count %> errors prohibited this book from being saved:
        </div>
      </div>
      <div class="error-list">
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="box-wrapper">
    <%= form_with model: @book do |f| %>
      <div class="box">
        <p>Title</p>
        <%= f.text_field :title %>
      </div>
      <div class="box">
        <hp>Body</p>
        <%= f.text_area :body %>
      </div>
      <%= f.submit 'Create Book' %>
    <% end %>
  </div>
</div>
